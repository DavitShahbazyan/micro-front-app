{
  "name": "@micro-front-app/shared",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/Button": {
      "import": "./dist/components/Button/index.js",
      "types": "./dist/components/Button/index.d.ts"
    },
    "./components/Card": {
      "import": "./dist/components/Card/index.js",
      "types": "./dist/components/Card/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run copy:css",
    "build:webpack": "webpack --config webpack.config.js --mode production",
    "start": "webpack serve --config webpack.config.js",
    "serve": "serve -s dist -l 3002",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "copy:css": "node ../build-config/copy-css.js",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.4",
    "@babel/preset-typescript": "^7.23.3",
    "@types/react": "^18.2.45",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "rimraf": "^5.0.5",
    "serve": "^14.2.5",
    "style-loader": "^3.3.3",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}

